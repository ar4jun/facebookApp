	body

	- var n =data[0].request

	- var no =n.length
		nav.navbar.navbar-inverse.navbar-fixed-top.sticky
			.container-fluid
				.navbar-header
					a.navbar-brand(href='/users/home')
						span.glyphicon.glyphicon-home(aria-hidden='true' ,style="display:inline;")
							
				form(method="POST", action="/users/search", style="display: inline-block;padding-top: 9px;")
					input.form-control(type="text", name="name",style="width:200px;display:inline;")
					input.btn.btn-primary(type="submit" value="Search").submit-button
				ul.nav.navbar-nav.navbar-right
					li(style="font-size: 18px;font-weight: bold;padding-top: 0px;")
						a.c1(href="/users/profileView")
							img(src="../images/"+data[0].img style="width:30px;height:30px;display: inline;")
							|      
							b.c5 #{data[0].name}
					if no>0
						li(style="font-size: 18px;font-weight: bold;padding-top: 7px;")
							a.c1(href="/users/reqst") 
								span.glyphicon.glyphicon-user 
								span.badge #{no}
					else
						li(style="font-size: 18px;font-weight: bold;padding-top: 7px;")
							a.c1(href="#") 
								span.glyphicon.glyphicon-user 
								
					li(style="font-size: 18px;font-weight: bold;padding-top: 7px;")
						a.c1(href="../users/edit") 
							span.glyphicon.glyphicon-edit(aria-hidden='true')
					li(style="font-size: 18px;font-weight: bold;padding-top: 7px;")
						a.c1(href="/auth/logout") 
							span.glyphicon.glyphicon-off(aria-hidden='true')
							|   SIGN OUT

